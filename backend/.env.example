# AI-Lawyer Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Basic Application Settings
PROJECT_NAME="АДВАКОД - ИИ-Юрист для РФ"
ENVIRONMENT=development
DEBUG=true

# Directory Configuration
UPLOAD_DIR=./uploads
VOICE_UPLOAD_DIR=./uploads/voice
DOCUMENT_UPLOAD_DIR=./uploads/documents
LOG_DIR=./logs
TEMP_DIR=./temp

# Database Configuration
DATABASE_URL=sqlite:///./ai_lawyer.db

# PostgreSQL (for production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=advakod
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=advakod_db

# Security Keys (REQUIRED - Generate strong keys!)
# Use: openssl rand -base64 32
SECRET_KEY=your_secret_key_minimum_32_characters_required_here
ENCRYPTION_KEY=your_encryption_key_minimum_32_characters_required

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Vector Database (ChromaDB/Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=legal_documents

# AI Model Configuration
SAIGA_MODEL_PATH=./models/saiga_mistral_7b_q4_K.gguf
SAIGA_N_CTX=4096
SAIGA_N_THREADS=6

# Caching Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_DEFAULT=3600
CACHE_TTL_AI_RESPONSE=7200
CACHE_TTL_USER_PROFILE=1800

# CORS Configuration (for production, use HTTPS only)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Optional: External Services
OPENAI_API_KEY=your_openai_api_key_here
YANDEX_SPEECHKIT_API_KEY=your_yandex_api_key_here